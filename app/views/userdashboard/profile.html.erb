<section class="container">
    <div class="row center-align">
        <div class="col xl12 l12 m12 s12 card">
            <img style="width:10%" class="responsive-img circle" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png">
            <h3><%= @user.fname %> <%= @user.lname %> <i class="material-icons blue-text">verified_user</i></h3>
        </div>
        <div class="col xl12 l12 m12 s12 card">
            <table class="striped">
                <tbody>
                    <tr>
                        <td>Email:</td>
                        <td> <%= @user.email %></td>
                    </tr>
                    <tr>
                        <td>Contact:</td>
                        <td> <%= @user.contact %></td>
                    </tr>
                    <tr>
                        <td>Create at:</td>
                        <td> <%= @user.created_at %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</section>