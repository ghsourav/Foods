<!--Mobile View Side Nav Start-->
<ul id="slide-out" class="sidenav bgmain">
    <li><%= link_to "Veg", veg_path %></li>
    <li><%= link_to "Non Veg", nonveg_path %></li>
    <% if current_user_auth %>
        <!--User Login nav Start-->
        <li><a href="/dashboard"> <i class="material-icons left">dashboard</i> Dashboard </a> </li>
        <li><a href="/profile/<%= current_user_auth.id %>"> <i class="material-icons left">account_box</i> <%= current_user_auth.fname %> <%= current_user_auth.lname %> </a> </li>
        <li><a href="/logout">Logout<i class="material-icons left">settings_power</i></a></li>
        <!--User Login nav End-->
        <% else %>
        <li><%=link_to 'Login','/login',class:"waves-effect waves-light"%></li>
        <li><a href="/register"><i class="material-icons left">person_add</i>Register</a></li>
    <% end %>
</ul>
<!--Mobile View Side Nav End-->